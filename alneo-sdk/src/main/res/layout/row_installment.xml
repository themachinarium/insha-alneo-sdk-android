<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="model"
            type="com.machinarum.alneo_sdk.data.models.entity.InstallmentEntity" />

    </data>

    <LinearLayout
        android:id="@+id/relativelayout_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@{model.selected ? @color/colorPrimary : @color/white}"
        android:minHeight="@dimen/_60sdp"
        android:orientation="horizontal"
        android:padding="@dimen/_10sdp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textview_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_regular"
                android:text="@{model.title}"
                android:textColor="@{model.selected ? @color/white : @color/indigo_dark}"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textview_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_regular"
                android:text="@{model.description}"
                android:textColor="@{model.selected ? @color/white : @color/indigo_dark}"
                android:textSize="12sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/textview_price"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/montserrat_semi_bold"
            android:gravity="center"
            android:text="@{model.price}"
            android:textColor="@{model.selected ? @color/white : @color/indigo_dark}"
            android:textSize="16sp" />

    </LinearLayout>
</layout>
