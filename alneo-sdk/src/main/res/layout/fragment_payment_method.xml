                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_4sdp"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="@string/payment_method_nfc"
                    android:textColor="@color/indigo_dark"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toTopOf="@+id/nfcPaymentDescription"
                    app:layout_constraintEnd_toStartOf="@id/nfc_arrow"
                    app:layout_constraintStart_toEndOf="@id/nfcPaymentIcon"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_chainStyle="packed" />

                <TextView
                    android:id="@+id/nfcPaymentDescription"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="@string/payment_method_nfc_description"
                    android:textColor="@color/indigo_dark"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@id/nfcPaymentTitle"
                    app:layout_constraintStart_toStartOf="@id/nfcPaymentTitle"
